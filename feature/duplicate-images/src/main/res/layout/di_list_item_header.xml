<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/ui_horizontal_space"
    android:paddingTop="5dp"
    android:paddingBottom="16.67dp">

    <ImageView
        android:id="@+id/ivSelectGroup"
        android:layout_width="21.33dp"
        android:layout_height="21.33dp"
        android:scaleType="centerInside"
        android:src="@drawable/ui_sel_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/ui_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="28dp"
        android:textColor="@color/ui_text_primary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/ivSelectGroup"
        app:layout_constraintStart_toStartOf="@id/ivSelectGroup"
        app:layout_constraintTop_toTopOf="@id/ivSelectGroup"
        tools:text="Jul 22, 2025" />

</androidx.constraintlayout.widget.ConstraintLayout>