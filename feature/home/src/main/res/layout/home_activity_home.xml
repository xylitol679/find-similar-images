<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_bg_page_gradient">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnSize8"
            style="@style/ui_Button.Toolbar"
            android:layout_marginEnd="8dp"
            android:text="尺寸8x8"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSize32"
            style="@style/ui_Button.Toolbar"
            android:layout_marginEnd="8dp"
            android:text="尺寸32x32"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnScanPhotos"
            style="@style/ui_Button.Toolbar"
            android:text="查询本地相似图片" />

    </LinearLayout>

    <com.drake.statelayout.StateLayout
        android:id="@+id/stateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:empty_layout="@layout/ui_layout_list_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:loading_layout="@layout/ui_layout_list_loading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/ui_Title.Toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原图" />

            <LinearLayout
                android:id="@+id/llSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                style="@style/ui_Title.Toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="缩小图" />

            <LinearLayout
                android:id="@+id/llSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                style="@style/ui_Title.Toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="灰度图" />

            <LinearLayout
                android:id="@+id/llGrayscale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </LinearLayout>

    </com.drake.statelayout.StateLayout>

</androidx.constraintlayout.widget.ConstraintLayout>